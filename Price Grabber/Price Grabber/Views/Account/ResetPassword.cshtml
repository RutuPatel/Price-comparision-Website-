@model Price_Grabber.Models.ResetPasswordViewModel


@{
    ViewBag.Title = "Reset password";
}


@*<h2>@ViewBag.Title</h2>*@

<br />
<div class="col-md-12" style="background-color:white">
    <div class="col-md-6">
        <img src="~/Content/Theme/img/logos/resetpassword.png" alt="logo" style="padding-top: 60px; padding-bottom: 40px; height: 450px; width: 450px; padding-left: 50px;"/>
        @*<img src="~/Content/Theme/img/logos/" alt="logo" style="padding-top: 60px; padding-bottom: 40px; height: 450px; width: 450px; padding-left: 50px;" />*@
    </div>

    <div class="col-md-4 col-md-offset-1">
        <br /><br />
        <br /><br />
        <br /><br />

@if (!string.IsNullOrEmpty(Model.Email))
{
        using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3 style="color: darkcyan; padding-bottom: 8px; padding-left: 10px;">Reset your password.</h3>


            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.Email)
            @Html.HiddenFor(m => m.Code)
            @*@Html.HiddenFor(model => model.Code)*@
           
            <div class="form-group" style="color:darkcyan">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", @style = "padding-top: 0px;" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter the new password" })
                </div>
            </div>
            <div class="form-group" style="color:darkcyan">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", @style = "width: 0px; padding-left: 0px; padding-top: 0px; padding-right: 0px; height: 36px;" })
                </div>
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Re-Enter the password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="color:lightseagreen;">
                    <input type="submit" class="btn btn-danger" value="Reset" />
                </div>
            </div>
        }
}
else
{
    <div class="form-group" style="color:red">
        <div class="col-md-10">
           Invalid User Identification , Plese retry!!
        </div>
    </div>
}
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
