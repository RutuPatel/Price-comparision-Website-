@using Microsoft.AspNet.Identity
 @model Price_Grabber.Models.SearchModel


    <!-- BEGIN HEADER -->
    <div class="header" style="margin-bottom:0px !important; background-color:lightseagreen;">
       
          <!--LOGO-->
       <div class="container" style="padding-left: 15px; padding-right: 22px; padding-top: 40px; height: auto; width: auto;">
                 <div class="col-md-3" style="padding-right: 0px; padding-left: 40px;">
                     <a class="site-logo" href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/Theme/img/logos/final.png")" alt="Price Grabber"></a>
                  </div>  

            <!--Search Bar-->
            <div class="col-md-8 form-group col-md-offset-1" style="margin-left: 48px; margin-top: 38px;">
                <div class="search-box">                 
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {                           
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.SearchQuery, new { @class = "form-control input-lg", style= "border-radius: 30px 0 0 30px !important;", placeholder = "Search millions of products from online stores" })
                            <span class="input-group-btn">
                                <button class="btn btn-warning btn-lg" type="submit" style="border-radius:0 30px 30px 0 !important;"><i class="glyphicon glyphicon-search" style="color:darkcyan"></i></button>
                            </span>
                        </div>
                    }
                </div>
            </div>

            <!-- BEGIN NAVIGATION -->
            <div class="container col-md-12" style="border-left-width: 0px; margin-left: 22px;">                  
                @Html.Partial("_Menu")              
            </div>


        </div>
    </div>

   

